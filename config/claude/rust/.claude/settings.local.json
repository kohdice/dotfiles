{
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "context7",
    "deepwiki",
    "lsmcp",
    "sequential-thinking"
  ],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "cchooks pretooluse"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cchooks stop"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "mcp__context7",
      "mcp__deepwiki",
      "mcp__lsmcp",
      "mcp__sequential-thinking"
    ]
  }
}